<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/map_frag_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_layout"></FrameLayout>
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1cccc"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="homeActivity"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_black_24dp"/>
        <ImageButton
            android:id="@+id/searchmap_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changePosition"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_search_black_24dp"/>
        <ImageButton
            android:id="@+id/direction_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changePosition"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_directions_black_24dp"/>
        <ImageButton
            android:id="@+id/places_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changePlaces"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_location_on_black_24dp"/>
    </LinearLayout>
</RelativeLayout>

