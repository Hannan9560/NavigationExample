<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.hannantalukder.navigationexample.PlacesActivity.NearByActivity">

    <FrameLayout
        android:id="@+id/map_frag_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_layout"></FrameLayout>
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1cccc"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/hospital_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changePlaces"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_local_hospital_black_24dp"/>
        <ImageButton
            android:id="@+id/atm_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changePlaces"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_local_atm_black_24dp"/>
        <ImageButton
            android:id="@+id/restaurant_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changePlaces"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_restaurant_black_24dp"/>
        <ImageButton
            android:id="@+id/cafe_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="changePlaces"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_local_cafe_black_24dp"/>
    </LinearLayout>
</RelativeLayout>
